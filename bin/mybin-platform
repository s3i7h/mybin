#!/usr/bin/env bash

lower='tr [A-Z] [a-z]'

arch=$(uname -m | $lower)
kernel=$(uname -s | $lower)
_version=$(uname -rv | $lower)
os="unknown"
like="unknown"
distro="unknown"
shell=$(basename $SHELL | $lower)

case $kernel in
    *darwin*) os="macos";;
    *linux*)
        case $_version in
            *wsl*) kernel="${kernel}#wsl"
        esac
        case $(uname -o | $lower) in
            *gnu*) os="gnu";;
        esac
        release=$([ -e /etc/os-release ] && cat /etc/os-release) 
        case $(echo $release | grep ID_LIKE=) in
            *debian*) like="debian";;
        esac
        case $(echo $release | grep ID=) in
            *ubuntu*) distro="ubuntu";;
        esac
esac

echo ${arch}:${kernel}:${os}:${like}:${distro}:${shell}
